<section class="recuperar-senha-clientes bg-pattern">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <br/>
        <h3 class="text-center">Recupere sua senha aqui</h3>
        <br/>

        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

          <%= f.input :email, input_html: {autofocus: true}, required: true %>

          <%= messages %>

          <br/>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= f.submit "Recuperar", class: "btn btn-default col-md-12" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</section>